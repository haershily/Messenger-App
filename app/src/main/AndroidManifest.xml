<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.harshil.messengerapp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:name="com.example.harshil.messengerapp.FirebaseChatMainApp"
        android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.harshil.messengerapp.ui.activities.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter><action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.harshil.messengerapp.ui.activities.LoginActivity"
            android:label="@string/app_name" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.harshil.messengerapp.ui.activities.RegisterActivity" android:label="@string/app_name" android:theme="@style/AppTheme.NoActionBar"/><activity android:name="com.example.harshil.messengerapp.ui.activities.UserListingActivity" android:label="@string/app_name" android:theme="@style/AppTheme.NoActionBar"/><activity android:name="com.example.harshil.messengerapp.ui.activities.ChatActivity" android:label="@string/app_name" android:theme="@style/AppTheme.NoActionBar"/><service android:name="com.example.harshil.messengerapp.fcm.MyFirebaseMessagingService"><intent-filter><action android:name="com.google.firebase.MESSAGING_EVENT"/></intent-filter></service><service android:name="com.example.harshil.messengerapp.fcm.MyFirebaseInstanceIDService"><intent-filter><action android:name="com.google.firebase.INSTANCE_ID_EVENT"/></intent-filter></service></application></manifest>
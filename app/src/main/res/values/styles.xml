<resources><!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"><!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow_700</item>
        <item name="colorPrimaryDark">@color/yellow_800</item>
        <item name="colorAccent">@color/yellow_700</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/yellow_800</item>
        <item name="android:fontFamily">cursive</item>
    </style>
    <style name="AppTheme.NoActionBar"><item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.Splash"><item name="android:windowBackground">@drawable/chat</item></style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>